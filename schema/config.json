{
  "$defs": {
    "Address": {
      "description": "Address model.",
      "properties": {
        "street": {
          "title": "Street",
          "type": "string"
        },
        "zip": {
          "title": "Zip",
          "type": "string"
        },
        "city": {
          "title": "City",
          "type": "string"
        },
        "country": {
          "anyOf": [
            {
              "pattern": "^(DE|Germany|Deutschland)$",
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Country"
        }
      },
      "required": [
        "street",
        "zip",
        "city"
      ],
      "title": "Address",
      "type": "object"
    },
    "Bank": {
      "description": "Bank model containing the bank account information.",
      "properties": {
        "iban": {
          "pattern": "^[A-Z]{2}\\d{2}\\s(\\d{4}\\s){4}\\d{2}$|^[A-Z]{2}\\d{20}$",
          "title": "Iban",
          "type": "string"
        },
        "bic": {
          "pattern": "^[A-Z]{6}[A-Z0-9]{2}([A-Z0-9]{3})?$",
          "title": "Bic",
          "type": "string"
        },
        "bank_name": {
          "title": "Bank Name",
          "type": "string"
        }
      },
      "required": [
        "iban",
        "bic",
        "bank_name"
      ],
      "title": "Bank",
      "type": "object"
    },
    "Company": {
      "description": "Company model for the config.toml file.",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "name_long": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Name Long"
        },
        "address": {
          "$ref": "#/$defs/Address"
        },
        "email": {
          "format": "email",
          "title": "Email",
          "type": "string"
        },
        "website": {
          "format": "uri",
          "maxLength": 2083,
          "minLength": 1,
          "title": "Website",
          "type": "string"
        },
        "phone": {
          "format": "phone",
          "maxLength": 64,
          "minLength": 7,
          "title": "Phone",
          "type": "string"
        },
        "tax": {
          "$ref": "#/$defs/Tax"
        },
        "bank": {
          "$ref": "#/$defs/Bank"
        }
      },
      "required": [
        "name",
        "address",
        "email",
        "website",
        "phone",
        "tax",
        "bank"
      ],
      "title": "Company",
      "type": "object"
    },
    "Invoice": {
      "description": "Invoice model containing tax and payment information.",
      "properties": {
        "VAT": {
          "title": "Vat",
          "type": "integer"
        },
        "due_days": {
          "title": "Due Days",
          "type": "integer"
        }
      },
      "required": [
        "VAT",
        "due_days"
      ],
      "title": "Invoice",
      "type": "object"
    },
    "Person": {
      "description": "Person model for the config.toml file.",
      "properties": {
        "first_name": {
          "title": "First Name",
          "type": "string"
        },
        "last_name": {
          "title": "Last Name",
          "type": "string"
        },
        "address": {
          "$ref": "#/$defs/Address"
        },
        "email": {
          "format": "email",
          "title": "Email",
          "type": "string"
        }
      },
      "required": [
        "first_name",
        "last_name",
        "address",
        "email"
      ],
      "title": "Person",
      "type": "object"
    },
    "Settings": {
      "description": "Settings model to configure the template generation.",
      "properties": {
        "open_pdf_viewer": {
          "title": "Open Pdf Viewer",
          "type": "boolean"
        },
        "open_mail_client": {
          "title": "Open Mail Client",
          "type": "boolean"
        }
      },
      "required": [
        "open_pdf_viewer",
        "open_mail_client"
      ],
      "title": "Settings",
      "type": "object"
    },
    "Style": {
      "description": "Style model for the latex template.",
      "properties": {
        "font_size": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ],
          "title": "Font Size"
        }
      },
      "required": [
        "font_size"
      ],
      "title": "Style",
      "type": "object"
    },
    "Tax": {
      "description": "Tax model containing the tax information like the tax number.",
      "properties": {
        "number": {
          "title": "Number",
          "type": "string"
        },
        "office": {
          "title": "Office",
          "type": "string"
        }
      },
      "required": [
        "number",
        "office"
      ],
      "title": "Tax",
      "type": "object"
    }
  },
  "description": "Config model for the config.toml file.",
  "properties": {
    "settings": {
      "$ref": "#/$defs/Settings"
    },
    "person": {
      "anyOf": [
        {
          "$ref": "#/$defs/Person"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "company": {
      "$ref": "#/$defs/Company"
    },
    "invoice": {
      "$ref": "#/$defs/Invoice"
    },
    "style": {
      "anyOf": [
        {
          "$ref": "#/$defs/Style"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    }
  },
  "required": [
    "settings",
    "company",
    "invoice"
  ],
  "title": "Config",
  "type": "object"
}